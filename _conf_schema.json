{
    "on_poke": {
        "type": "object",
        "description": "戳一戳相关配置",
        "items": {
            "is_enable": {
                "type": "bool",
                "description": "是否启用戳一戳功能",
                "default": true
            },
            "poke_prompt": {
                "type": "string",
                "description": "被戳时的LLM提示语",
                "default": "请以可爱的语气，生成一句被人戳了的拒绝回应，表现出些许娇嗔或不满，但整体保持可爱风格。"
            },
            "pokeback_prompt": {
                "type": "string",
                "description": "主动回戳时的LLM提示语",
                "default": "请以可爱的语气，生成一句主动戳别人的回应，表现出顽皮或调皮的态度，但整体保持可爱风格。"
            },
            "pokeback_probability": {
                "type": "float",
                "description": "回戳概率，范围0-1",
                "default": 0.2
            }
        }
    },
    "active_message": {
        "type": "object",
        "description": "主动消息相关配置",
        "items": {
            "is_enable": {
                "type": "bool",
                "description": "是否启用主动消息功能",
                "default": false
            },
            "active_message_prompt": {
                "type": "string",
                "description": "主动消息的LLM提示语",
                "default": "长时间没有人搭理你，因此请你以可爱的语气，生成一条消息寻求大家陪你聊天或玩耍，表现出些许娇嗔或不满，但整体保持可爱风格。"
            },
            "time_interval": {
                "type": "int",
                "description": "主动消息的触发间隔（秒）",
                "default": 3600
            }
        }
    },
    "qq_emoji": {
        "type": "object",
        "description": "QQ表情相关配置",
        "items": {
            "is_enable": {
                "type": "bool",
                "description": "是否启用QQ表情功能",
                "default": true
            },
            "qq_emoji_prompt": {
                "type": "string",
                "description": "QQ表情的LLM提示语",
                "default": "当你需要使用QQ表情时，请使用{qq_emoji:名称}的标签格式，例如，请注意当你这样使用时真的可以发出QQ表情：\n你好{qq_emoji:得意} -> 你好+得意的qq表情"
            },
            "regular_expression": {
                "type": "string",
                "description": "用于匹配QQ表情的正则表达式",
                "default": "\\{qq_emoji:(.*?)\\}"
            }
        }
    }
}